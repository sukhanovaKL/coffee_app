<Window x:Class="coffee_app.List_Users"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:coffee_app"
        mc:Ignorable="d"
        Title="List_Users" Height="450" Width="800"
        Background="#8C7A7A">
    <Grid>
        <Label Content="Список пользователей:" FontSize="25" HorizontalAlignment="Center" FontStyle="Italic" Foreground="White"></Label>
        <ListBox x:Name="Items" Width="750" Height="340" Background="LightGray" VerticalAlignment="Center"></ListBox>
        <Button Content="Удалить" Width="200" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" BorderThickness="5" BorderBrush="#8C7A7A" FontSize="16" Click="Button_Click"></Button>
        <Button Content="Назад" Width="200" Height="30" HorizontalAlignment="Stretch"  VerticalAlignment="Bottom" BorderThickness="5" BorderBrush="#8C7A7A" FontSize="16" Click="Button_Click_2"></Button>
    </Grid>
</Window>
